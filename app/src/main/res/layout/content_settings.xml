<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.example.educationapp.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <TextView
        android:id="@+id/currentDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_difficulty" />

    <Button
        android:id="@+id/swapDifficultyEasy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setEasyDifficulty" />

    <Button
        android:id="@+id/swapDifficultyHard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setHardDifficulty" />

</LinearLayout>
